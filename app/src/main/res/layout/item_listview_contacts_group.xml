<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--联系人Fragment中ExpandableListView的模板-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/item_contacts_group_image"
            android:src="@drawable/qb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_contacts_group_name"
            android:layout_toEndOf="@+id/item_contacts_group_image"
            android:paddingStart="20dp"
            android:textSize="20dp"
            android:textColor="@color/black01"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_contacts_child_num"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:paddingEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>