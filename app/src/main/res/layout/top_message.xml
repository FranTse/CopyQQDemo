<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/message_top"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <!--信息Fragment顶部界面-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue01">

        <include
            layout="@layout/head_image"/>

        <TableLayout

            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow>

                <Button
                    android:id="@+id/bn_head_message"
                    android:text="@string/消息"
                    android:textSize="20sp"
                    android:background="@drawable/buttom_style"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"
                    />

                <View
                    android:background="@color/blue01"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/bn_head_phone"
                    android:text="@string/电话"
                    android:textSize="20sp"
                    android:background="@drawable/buttom_style"
                    android:layout_height="35dp"
                    android:layout_width="wrap_content"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>



</LinearLayout>